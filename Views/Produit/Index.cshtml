@using ProjetCsharpWebS5.Core.Pagination
@model PaginationModel<Produit>
@{
    ViewData["Title"] = "Produits";
}
  @if (TempData["Message"] != null){
    <div class="text-green-500 text-center p-4 rounded-md">
        @TempData["Message"]
    </div>
  }
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-4xl font-bold text-gray-800">Liste des produits</h1>
    <a asp-action="Create"
       class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 text-lg">
      <i class="ri-price-tag-3-line"></i> Nouveau produit
    </a>
  </div>

  @if (Model.Items.Any())
  {

    <!-- Tableau des Produits -->
    <div class="overflow-x-auto bg-white rounded-lg shadow-md text-lg">
      <table class="min-w-full border-collapse border border-gray-200">
        <thead class="bg-blue-300">
          <tr class="h-16">
            <th class="border border-gray-200 px-4 py-2 text-left font-medium text-gray-600">Libelle</th>
            <th class="border border-gray-200 px-4 py-2 text-left font-medium text-gray-600">Prix</th>
            <th class="border border-gray-200 px-4 py-2 text-left font-medium text-gray-600">Quantité en stock</th>
            <th class="border border-gray-200 px-4 py-2 text-left font-medium text-gray-600">Quantité ceuille</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var produit in Model.Items)
          {
            <tr class="border-b hover:bg-gray-50 h-14">
              <td class="border border-gray-200 px-4 py-2 text-gray-800">@produit.Libelle</td>
              <td class="border border-gray-200 px-4 py-2 text-gray-800">@produit.Prix</td>
              <td class="border border-gray-200 px-4 py-2 text-gray-800">@produit.QteStock</td>
              <td class="border border-gray-200 px-4 py-2 text-gray-800">@produit.QteCeuil</td>
            </tr>
          }
        </tbody>
      </table>
      @await Html.PartialAsync("_Pagination", Model.Pagination)
    </div>
  }
  else
  {
    <div class="flex justify-center items-center mb-6 border-y-4 border-blue-300 h-32 mt-16 ">
      <h1 class="text-2xl font-bold text-gray-800">Aucun produit</h1>
    </div>
  }

