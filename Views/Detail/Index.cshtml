@using ProjetCsharpWebS5.Core.Pagination
@model PaginationModel<Commande>
@{
    ViewData["Title"] = "Commandes";
}
  @if (TempData["Message"] != null){
    <div class="text-green-500 text-center p-4 rounded-md">
        @TempData["Message"]
    </div>
  }
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-4xl font-bold text-gray-800">Liste des commandes</h1>
    
  </div>

  @if (Model.Items.Any())
  {

    <!-- Tableau des commandes -->
    <div class="overflow-x-auto bg-white rounded-lg shadow-md text-lg">
      <table class="min-w-full border-collapse border border-gray-200">
        <thead class="bg-blue-300">
          <tr class="h-16">
            <th class="border border-gray-200 px-4 py-2 text-left font-medium text-gray-600">Nom et Prénom</th>
            <th class="border border-gray-200 px-4 py-2 text-left font-medium text-gray-600">Téléphone</th>
            <th class="border border-gray-200 px-4 py-2 text-left font-medium text-gray-600">Montant (CFA)</th>
            <th class="border border-gray-200 px-4 py-2 text-left font-medium text-gray-600">Date</th>
            <th class="border border-gray-200 px-4 py-2 text-left font-medium text-gray-600">Etat</th>
            <th class="border border-gray-200 px-4 py-2 text-center font-medium text-gray-600">Actions</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var commande in Model.Items)
          {
            <tr class="border-b hover:bg-gray-50 h-14">
              <td class="border border-gray-200 px-4 py-2 text-gray-800">@commande.Client.Nom @commande.Client.Prenom</td>
              <td class="border border-gray-200 px-4 py-2 text-gray-800">@commande.Client.Telephone</td>
              <td class="border border-gray-200 px-4 py-2 text-gray-800">@commande.Montant</td>
              <td class="border border-gray-200 px-4 py-2 text-gray-800">@commande.Date</td>
              <td class="border border-gray-200 px-4 py-2 text-gray-800">@commande.Etat</td>
              <td class="border border-gray-200 px-4 py-2 text-center">
                <a href="/commandes/Orders/@commande.Id" 
                  class="bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600">
                  Voir produits
                </a>
              </td>
            </tr>
          }
        </tbody>
      </table>
      @await Html.PartialAsync("_Pagination", Model.Pagination)
    </div>
  }
  else
  {
    <div class="flex justify-center items-center mb-6 border-y-4 border-blue-300 h-32 mt-16 ">
      <h1 class="text-2xl font-bold text-gray-800">Aucune commande</h1>
    </div>
  }

